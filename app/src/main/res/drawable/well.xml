<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State ketika tombol ditekan -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#6F60F5" /> <!-- Isi warna ungu saat ditekan -->
            <corners android:radius="12dp" />
        </shape>
    </item>
    <!-- State default -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- Transparan -->
            <stroke android:width="2dp" android:color="#FFFFFF" /> <!-- Outline putih -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>
